namespace :crawling_lol_collect do
  desc "TODO"
  task crawling_lol_collect: :environment do
  end

    if params[:lolnick]
    doc = Nokogiri::HTML(open("http://www.op.gg/summoner/userName=#{params[:lolnick]}"))
    @crawls = doc.css('#SummonerLayoutContent > div > div > div > div > div')
    @crawls.each do |x| 
      tier = x.css('Image').image
      info = x.css('span.tierRank').text
      point = x.css('span.LeaguePoints').text
      win = x.css('span.win').text
      lose = x.css('span.lose').text
      ratio = x.css('span.winratio').text
      @lol = CrawlingLol.new(image: tier, info: info, point: point, win: win, lose: lose, ratio: ratio)
      @lol.save
    end
    end
end